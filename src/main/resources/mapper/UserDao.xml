<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.xhui.awardsystem.dao.UserDao">
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into sys_user(`username`, `password`, `real_name`, `role`, `email`) values(#{username}, #{password}, #{realName}, #{role}, #{email})
    </insert>

    <update id="updateEmailAndRealName">
        update sys_user
        <trim prefix="set" prefixOverrides=",">
            <if test="email != null and email != '' ">
                ,email = #{email}
            </if>
            <if test="realName != null and realName != '' ">
                ,real_name = #{realName}
            </if>
            ,id = #{id}
        </trim>
        where id= #{id}
    </update>

    <update id="updatePassword">
        update sys_user
        set password = #{newPassword}
        where id = #{id}
    </update>

    <select id="findAllCountByRole" resultType="java.lang.Integer">
        select count(*) from sys_user
        <where>
            <if test="roleEnum != null">
                role = #{roleEnum}
            </if>
        </where>
    </select>
</mapper>